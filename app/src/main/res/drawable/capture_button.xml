<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#8beef0f5" />

        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#aa8f9190"
                android:centerColor="#aaf2f4f3"
                android:endColor="#aaaeafb0"/>
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>