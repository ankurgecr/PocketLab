<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#c8aeadb0"
                android:centerColor="#c8f8f7fa"
                android:endColor="#c8bfbdc2"/>

            <size
                android:height="50dp"
                android:width="50dp"/>
            <corners
                android:radius="25dp"/>


        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:startColor="#aeadb0"
                android:centerColor="#f8f7fa"
                android:endColor="#bfbdc2"/>

            <size
                android:height="50dp"
                android:width="50dp"/>
            <corners
                android:radius="25dp"/>

        </shape>
    </item>
</selector>