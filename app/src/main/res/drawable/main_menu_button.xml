<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">

            <size
                android:width="25dp"
                android:height="25dp"/>
            <solid
                android:color="#d4d5d7" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="25dp"
                android:height="25dp"/>
            <gradient
                android:startColor="#aeadb0"
                android:centerColor="#f8f7fa"
                android:endColor="#bfbdc2"/>
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>