<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akanksha.pocketlab.NewExperiment"
    android:background="@drawable/home_screen_bckgrnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="New Experiment"
            android:textColor="#ffffff"
            android:id="@+id/titleTextView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:id="@+id/home_button"
            android:background="@drawable/main_menu_button"
            android:textColor="#5f5e5e"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"/>

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_sensor_title"
            android:id="@+id/color_button"
            android:background="@drawable/color_button"
            android:layout_margin="20dp"
            />

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_sensor_title"
            android:id="@+id/temperature_button"
            android:background="@drawable/temp_button"
            android:layout_margin="20dp"
            />

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ambi_light_sensor_title"
            android:id="@+id/ambient_button"
            android:background="@drawable/ambi_button"
            android:layout_margin="20dp"
            />

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Variable Sensor"
            android:background="@drawable/empty_button"
            android:id="@+id/variable_sensor"
            android:layout_margin="20dp"
            />

        <ImageView
            android:contentDescription="@string/empty_image_description"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_to_csv_title"
            android:id="@+id/csv_button"
            android:background="@drawable/empty_button"
            android:layout_margin="20dp"/>

        <Button
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_data_title"
            android:background="@drawable/empty_button"
            android:id="@+id/view_data_button"
            android:layout_margin="20dp"/>

        </LinearLayout>
</ScrollView>
